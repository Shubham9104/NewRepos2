@model GroceryManagement.web.Models.Item

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
   
<div>
    <h4>Item</h4>
    <hr />
    <div class="card" style="width:300px">
        <div class="card-title text-center">
            <h2>@Html.DisplayNameFor(model => model.ImgUrl)</h2>
        </div>
        <img class="card-img-top" src="@Model.ImgUrl" alt="@Model.ItemName"
             style="max-height: 200px;">
        <div class="card-body">
            <h4 class="card-title">@Model.ItemName</h4>
            <dl class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.Categories)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ItemName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ItemName)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Available)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Available)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>

            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.ItemId" class="btn btn-primary">Edit</a>
            &nbsp;|&nbsp;
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


